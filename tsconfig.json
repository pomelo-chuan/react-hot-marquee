{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "module": "commonjs",
    "outDir": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "sourceMap": false,
    "declaration": true,
    "pretty": true,
    "importHelpers": true,
    "lib": [
      "es2018",
      "dom"
    ],
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/stories"
  ]
}
